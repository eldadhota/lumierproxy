<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure server and register device"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Server IP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Server IP"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etServerIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 192.168.1.100"
            android:inputType="text"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="12dp" />

        <!-- Server Port -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Port"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etServerPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="8888"
            android:text="8888"
            android:inputType="number"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="16dp" />

        <!-- Proxy Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Proxy"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerProxy"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Refresh"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:background="@android:color/transparent"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Username"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., my-pixel-6"
            android:inputType="text"
            android:padding="14dp"
            android:background="@drawable/input_background"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:layout_marginBottom="24dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Device"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_connect"
            android:padding="16dp" />

        <!-- Change Proxy Button -->
        <Button
            android:id="@+id/btnChangeProxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Proxy"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_connect"
            android:padding="16dp"
            android:layout_marginTop="12dp" />

        <!-- Check public IP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCheckIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check IP"
                android:textColor="@android:color/white"
                android:background="@drawable/button_connect"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tvWhoAmI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your public IP will appear here"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="end"
                android:paddingStart="12dp"
                android:paddingEnd="4dp" />
        </LinearLayout>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Enter dashboard server IP and port\n2. Tap Refresh to load proxies\n3. Select a proxy and enter username\n4. Tap Register to save your device"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="24dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lumier Dynamics"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:gravity="center"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>
